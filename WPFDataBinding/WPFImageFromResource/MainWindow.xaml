<Window x:Class="WPFImageFromResource.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFImageFromResource"
        mc:Ignorable="d"
        Title="WPFImageFromResource" Height="450" Width="800">
    <DockPanel>
        <Button x:Name="ShowButton" Click="ShowButtonClick" DockPanel.Dock="Top" Content="Show image" Width="100"/>
        <Image x:Name="Image" Source="{Binding ImagePath}" Width="30" Height="30" DockPanel.Dock="Bottom"/>
    </DockPanel>
</Window>
