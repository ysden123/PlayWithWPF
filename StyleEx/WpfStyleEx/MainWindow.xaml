<Window x:Class="WpfStyleEx.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfStyleEx"
        mc:Ignorable="d"
        Title="WpfStyleEx" Height="450" Width="800" WindowStartupLocation="CenterScreen">
    <DockPanel LastChildFill="False">
        <Button x:Name="B1" DockPanel.Dock="Top" Click="B1_Click">Button1</Button>
        <Button x:Name="B2" DockPanel.Dock="Top" Click="B2_Click">Button2</Button>
        <Button x:Name="B3" DockPanel.Dock="Top" Click="B3_Click">Button3</Button>
        <StackPanel Orientation="Horizontal" DockPanel.Dock="Top">
            <Button x:Name="B4">Button 4</Button>
            <Button x:Name="B5">Button 5</Button>
            <Button x:Name="B6">Button 6</Button>
        </StackPanel>
    </DockPanel>
</Window>
