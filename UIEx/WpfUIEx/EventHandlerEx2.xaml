<UserControl x:Class="WpfUIEx.EventHandlerEx2"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfUIEx"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <GroupBox Header="Event Handler Ex 2" Margin="10">
        <DockPanel>
            <GroupBox Header="Buttons" DockPanel.Dock="Top" HorizontalAlignment="Center" Margin="5">
                <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" HorizontalAlignment="Center" VerticalAlignment="Top">
                    <Button x:Name="Button1" Content="Button1" Click="Button1_Click" Margin="5"/>
                    <Button x:Name="Button2" Content="Button2" Click="Button2_Click" Margin="5"/>
                </StackPanel>
            </GroupBox>
            <Border BorderBrush="Black" BorderThickness="1" Margin="10">
                <TextBlock x:Name="ResultText" Padding="5"/>
            </Border>
        </DockPanel>
    </GroupBox>
</UserControl>
