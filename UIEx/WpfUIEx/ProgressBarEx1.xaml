<UserControl x:Class="WpfUIEx.ProgressBarEx1"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfUIEx"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <GroupBox Margin="10,10,10,10">
            <GroupBox.Header>Progress bar ex 1</GroupBox.Header>
        </GroupBox>
        <Grid Margin="20,20,20,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>
            <Label Grid.Row="0" Grid.Column="0" Height="30" Width="100" HorizontalAlignment="Right">Progress:</Label>
            <ProgressBar x:Name="ProgressBar" Grid.Row="0" Grid.Column="1" Width="200" Height="25" Minimum="0" Maximum="110"></ProgressBar>
            <Button Grid.Row="1" Grid.Column="0" x:Name="StartProgress" Height="20" Width="100" Click="StartProgress_Click">Start</Button>
        </Grid>
    </Grid>

</UserControl>
