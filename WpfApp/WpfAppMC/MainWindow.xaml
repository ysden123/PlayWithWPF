<Window x:Class="WpfAppMC.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfAppMC"
        mc:Ignorable="d"
        Title="WPFAppMC" Height="450" Width="800" WindowStartupLocation="CenterScreen">
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="Actions">
                <MenuItem Header="Window 1" Click="MenuItemWindow1_Click"/>
                <MenuItem Header="Window 2" Click="MenuItemWindow2_Click"/>
            </MenuItem>
        </Menu>
        <ContentControl x:Name="CC"/>
    </DockPanel>
</Window>
