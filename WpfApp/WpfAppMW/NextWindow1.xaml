<Window x:Class="WpfAppMW.NextWindow1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfAppMW"
        mc:Ignorable="d"
        Title="NextWindow1" Height="250" Width="400">
    <DockPanel LastChildFill="False">
        <DockPanel DockPanel.Dock="Top">
            <Label BorderThickness="2" Content="The label 1: " BorderBrush="Black" DockPanel.Dock="Left"/>
            <TextBox x:Name="t1" FontSize="13"  DockPanel.Dock="Left" >The text box</TextBox>
            <Button DockPanel.Dock="Left" Width="70" Cursor="Hand" Click="Button_Click">Click text</Button>
        </DockPanel>

        <Label  DockPanel.Dock="Top">The label 2</Label>
        <Label  DockPanel.Dock="Bottom">The label 3</Label>
    </DockPanel>
</Window>
