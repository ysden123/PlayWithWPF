<Window x:Class="WpfAppMW.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfAppMW"
        mc:Ignorable="d"
        Title="WpfAppMW" Height="450" Width="800">
    <DockPanel>
        <Menu DockPanel.Dock="Top" FontFamily="Arial" FontSize="16">
            <MenuItem Header="Actions">
                <MenuItem Header="Action 1" Click="MenuItem_Click1"/>
                <MenuItem Header="Action 2" Click="MenuItem_Click2"/>
                <MenuItem Header="Next Window 1" Click="NextWindow1_Click"/>
                <MenuItem Header="Some dialog" Click="SomeDialog_Click"/>
                <Separator/>
                <MenuItem Header="Close" Click="MenuItem_Close"/>
            </MenuItem>
        </Menu>
    </DockPanel>
</Window>
