<Window x:Class="WpfAppMW.SomeDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfAppMW"
        mc:Ignorable="d"
        Title="SomeDialog" Height="90" Width="396">
    <DockPanel LastChildFill="False">
        <StackPanel Orientation="Horizontal" DockPanel.Dock="Top">
            <Label>Label 1:</Label>
            <TextBox x:Name="textBox" Width="80" Height="25"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" DockPanel.Dock="Bottom" VerticalAlignment="Center" HorizontalAlignment="Center">
            <Button x:Name="okButton" Click="OkButton_Click" Margin="5,0,5,0" IsDefault="True">Ok</Button>
            <Button x:Name="cancelButton" Click="CancelButton_Click" Margin="5,0,5,0" IsCancel="True">Cancel</Button>
        </StackPanel>
    </DockPanel>
</Window>
